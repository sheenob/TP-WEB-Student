{
    "compilerOptions": {
      "target": "ES6",
      "module": "ESNext",
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "declaration": true,
      "declarationDir": "./types",
      "outDir": "./build",
      "types": [],
      "typeRoots": ["./node_modules/@types"],
      "strictPropertyInitialization": false,
      "allowJs": true, // Permet de compiler des fichiers .js en tant que modules ESM
      "checkJs": true // Active la v√©rification des fichiers .js
    },
    "ts-node": {
      // Tell ts-node CLI to install the --loader automatically
      "esm": true,
      "experimentalSpecifierResolution": "node"
  },
  
      "include": ["app/*.ts"],
      "exclude": [
          "node_modules",
          "build"
      ],
  }
  